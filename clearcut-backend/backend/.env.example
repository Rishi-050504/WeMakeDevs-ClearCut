# Server
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/clearcut
# OR for Atlas: mongodb+srv://username:password@cluster.mongodb.net/clearcut

# Vector Database
QDRANT_URL=http://localhost:6333
# OR for Cloud: https://your-cluster.qdrant.io

# AI Services
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Authentication
JWT_SECRET=your_super_secret_jwt_key_minimum_32_chars
JWT_EXPIRES_IN=7d

# MCP Gateway
MCP_GATEWAY_URL=http://localhost:8811

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10